@model WebApplication1.Models.OS_VM

@{
    ViewBag.Title = "Báo giá Cloud - Thêm hệ điều hành";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<link rel="stylesheet" href="https://code.jquery.com/ui/1.12.1/themes/base/jquery-ui.css">

<div class="container">
    <div class="body-tick mx-md-5 mt-5 pb-5">
        <div class="text-center h4 py-2 m-0 form-header">
            THÊM THẺ PHÒNG HỌP
        </div>
        <div class="bg-white">          

            <form method="post" name="Form" onsubmit="return validate()">
                <div id="divCont">
                    <div class="collapse show idIN " id="collapseExample">
                        <div class="card card-body border-0 text-left pt-0 p checkbox-card pt-3">

                            <div class="form-row form-group">
                                <div class="col">
                                    <small class="form-text text-muted mb-1">
                                        Loại:
                                    </small>
                                    <select name="type_os" class="form-control">
                                        <option>Windows</option>
                                        <option>Linux</option>
                                        <option>Unix</option>
                                        <option>Khác</option>
                                    </select>
                                </div>
                            </div>

                            <div class="form-row form-group">
                                <div class="col">
                                    <small class="form-text text-muted mb-1">
                                        Hệ điều hành:
                                    </small>
                                    <input name="name_os" type="text" class="form-control">
                                </div>
                            </div>
                            <button type="submit" class="btn btn-primary font-weight-bold">Thêm</button>
                        </div>

                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

<script type="text/javascript">

    function validate() {
        var a = document.forms["Form"]["type_os"].value;
        var b = document.forms["Form"]["name_os"].value;

        if (a === "" || b === "") {
            alert("Điền đầy đủ thông tin");
            return false;
        }
        return true;
    }
</script>}
